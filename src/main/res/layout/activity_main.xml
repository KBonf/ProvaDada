<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnLoadPrenotazioni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carica Prenotazioni Pending" />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accetta Prenotazione (ID 1)" />

    <Button
        android:id="@+id/btnReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rifiuta Prenotazione (ID 1)" />

    <!-- Inserisci qui la RecyclerView o altri componenti per visualizzare l'elenco -->
</LinearLayout>
