<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo di input per inserire la data -->
    <EditText
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserisci data (YYYY-MM-DD)"
        android:inputType="date" />

    <!-- Pulsante per caricare le prenotazioni -->
    <Button
        android:id="@+id/btnCarica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carica Prenotazioni"
        android:layout_marginTop="8dp"/>

    <!-- ListView per mostrare le prenotazioni -->
    <ListView
        android:id="@+id/listViewPrenotazioni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

</LinearLayout>
