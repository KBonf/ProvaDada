<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Visualizzazione dei dettagli della prenotazione -->
    <TextView
        android:id="@+id/tvPrenotazioneDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dettagli Prenotazione"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="24dp" />

    <!-- Contenitore per i pulsanti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnAccetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accetta"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnRifiuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rifiuta" />
    </LinearLayout>

</LinearLayout>
