<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Sezione visibile sempre (header) -->
    <LinearLayout
        android:id="@+id/llRowHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumeroPersone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Persone" />

        <TextView
            android:id="@+id/tvData"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Data" />

        <TextView
            android:id="@+id/tvOrario"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Orario" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Status" />

        <TextView
            android:id="@+id/tvTavoli"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tavoli" />
    </LinearLayout>

    <!-- Sezione espandibile: pulsanti azione -->
    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAccetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accetta"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnRifiuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rifiuta" />
    </LinearLayout>
</LinearLayout>
